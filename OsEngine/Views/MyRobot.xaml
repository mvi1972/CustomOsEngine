<Window x:Class="OsEngine.Views.MyRobot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsEngine.Views"
        mc:Ignorable="d"
        Title="MyRobot" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="MinWidth" Value="60"/>
         </Style>
        <Style TargetType="ComboBox">
            <Setter Property="MinWidth" Value="60"/>
        </Style> 
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height ="30"/>
            <RowDefinition Height ="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">

            <Button Content="Сервер"
                Command="{Binding ComandServerConect}"/>
            <TextBlock Text="{Binding ServerType}"/>
            <TextBlock Text="{Binding StatusServer}"/>
            <TextBlock Text="Счет"/>
            <ComboBox ItemsSource="{Binding Portfolios}"
                      SelectedItem="{Binding Portfolio}"/>
            
            <TextBlock Text="Бумага"/>
            <ComboBox ItemsSource="{Binding ListSecurities}"
                  SelectedItem="{Binding SelectedSecurity}">

            </ComboBox> 
        </StackPanel>
            <GroupBox Header="Параметры"
                      Grid.Row="1"
                      Width="300"
                      HorizontalAlignment="Left">
            <UniformGrid Columns="2">
                <TextBlock Text="Точка Старта "/>
                <local:DecimalTextBox Text="{Binding StartPoint}"/>

            </UniformGrid>
                
            </GroupBox>

    </Grid>
</Window>
